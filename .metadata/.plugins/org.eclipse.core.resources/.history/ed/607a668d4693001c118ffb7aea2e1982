package com.training.oop;

class Shapes {
    private String name;
    private int length;
    private int width;
    private int radius;

    Shapes(String n, int l, int w, int r) {
        name = n;
        length = l;
        width = w;
        radius = r;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public int getLength() {
        return length;
    }

    public void setLength(int length) {
        this.length = length;
    }

    public int getWidth() {
        return width;
    }

    public void setWidth(int width) {
        this.width = width;
    }

    public int getRadius() {
        return radius;
    }

    public void setRadius(int radius) {
        this.radius = radius;
    }
}

class Circle extends Shapes {

    Circle(String n, int l, int w, int r) {
        super(n, l, w, r);
    }

    class Rectangle extends Shapes {
        Rectangle(String n, int l, int w, int r) {
            super(n, l, w, r);
            // TODO Auto-generated constructor stub
        }

