package com.training;
import java.util.*;

public class AvgArr {
	public static void main(String[] args) 
	{
		 int n , sum  = 0;
	        System.out.println("enter array size : ");
	        Scanner sc = new Scanner(System.in);
	        n = sc.nextInt();
	        // creating  an array
	        int [] a = new int [n];
	        System.out.println("Enter Elements of array");
	        // reading and storing values from user using for loop
	        for(int i = 0;i<n;i++)
	        {
	            int value = sc.nextInt();
	            a[i] = value;
	        }
	        // calculating sum of all elements in an array
	        for(int i = 0;i<n;i++)
	        {
	            sum = sum + a[i];
	        }
	        // finding average
	        float avg = sum/n;
	        System.out.println("avg. of array :" + avg);

	}

}
